          <st id="GV4" editor="bool" />
          <st id="GV5" editor="bool" />
          <st id="GV6" editor="bool" />
          <st id="GV7" editor="profile" />
        </sts>
        <cmds>
            <sends />
            <accepts>
              <cmd id="DON" />
              <cmd id="PAUSE" />
              <cmd id="CONTINUE" />
              <cmd id="ENABLE" />
              <cmd id="DISABLE" />
              <cmd id="UPDATE" />
              <cmd id="IR">
                <p id="" editor="IR"/>
              </cmd>
            </accepts>
        </cmds>
    </nodeDef>

